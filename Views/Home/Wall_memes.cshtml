@model IEnumerable<Im.Models.Memes_record>

@if (ViewBag.Count == 0)
            {
    
        <div class="div_color_white">
            <p>Нет записей</p>
        </div>
   
}
@if(Model.Count()>0)
{ 
<ul class="Wall_memes_main_ul">

    
